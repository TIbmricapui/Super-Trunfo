#include <stdio.h>

// Fun√ß√£o auxiliar para calcular a densidade (Melhora a leitura)
float calcular_densidade(unsigned long int pop, float area) {
    // Retorna o resultado da divis√£o ou 0.0f se a √°rea for zero
    return (area > 0) ? (float)pop / area : 0.0f;
}

int main() {
    
    // ===============================================
    // 1. VARI√ÅVEIS E DADOS DAS CARTAS (BASE DO DESAFIO ANTERIOR)
    // ===============================================
    
    // CARTA 01 (S√ÉO PAULO)
    char estado[20] = "SP";
    char cidade[50] = "S√£o Paulo";
    unsigned long int populacao = 12325000;
    float area = 1521.11f; 
    float pib = 699.28f; 
    int ponto_turistico = 50; 
    float densidade, pibpercapita, super_poder;
    
    // C√ÅLCULOS CARTA 01
    densidade = calcular_densidade(populacao, area);
    pibpercapita = (populacao > 0) ? pib / (float)populacao : 0.0f;
    super_poder = (float)populacao + area + pib + ponto_turistico + pibpercapita + (densidade > 0 ? (1.0f / densidade) : 0.0f);
    
    // CARTA 02 (RIO DE JANEIRO)
    char estado2[20] = "RJ";
    char cidade2[50] = "Rio de Janeiro";
    unsigned long int populacao2 = 6748000; 
    float area2 = 1200.25f; 
    float pib2 = 300.50f;
    int ponto_turistico2 = 30;
    float densidade2, pibpercapita2, super_poder2;

    // C√ÅLCULOS CARTA 02
    densidade2 = calcular_densidade(populacao2, area2);
    pibpercapita2 = (populacao2 > 0) ? pib2 / (float)populacao2 : 0.0f;
    super_poder2 = (float)populacao2 + area2 + pib2 + ponto_turistico2 + pibpercapita2 + (densidade2 > 0 ? (1.0f / densidade2) : 0.0f);

    // ===============================================
    // 2. EXIBI√á√ÉO COMPLETA DOS ATRIBUTOS (OPCIONAL, MANTIDO DO C√ìDIGO ORIGINAL)
    // ===============================================
    
    printf(" ¬† ¬† ¬† ¬† ¬† ¬†RESUMO COMPLETO DAS CARTAS \n");
    printf("\n ¬† ¬†CARTA 1: %s (%s) ¬† ¬†\n", cidade, estado);
    printf("Popula√ß√£o: %lu\n", populacao);
    printf("√Årea: %.2f km¬≤\n", area);
    printf("PIB (Bilh√¥es): %.2f\n", pib);
    printf("Pontos Tur√≠sticos: %d\n", ponto_turistico);
    printf("Densidade Populacional: %.2f hab/km¬≤\n", densidade);
    printf("PIB Per Capita: %.8f (bilh√µes/hab)\n", pibpercapita);
    printf("Super Poder: %.2f\n", super_poder);

    printf("\n ¬† ¬†CARTA 2: %s (%s) ¬† ¬†\n", cidade2, estado2);
    printf("Popula√ß√£o: %lu\n", populacao2);
    printf("√Årea: %.2f km¬≤\n", area2);
    printf("PIB (Bilh√¥es): %.2f\n", pib2);
    printf("Pontos Tur√≠sticos: %d\n", ponto_turistico2);
    printf("Densidade Populacional: %.2f hab/km¬≤\n", densidade2);
    printf("PIB Per Capita: %.8f (bilh√µes/hab)\n", pibpercapita2);
    printf("Super Poder: %.2f\n", super_poder2);

    // ===============================================
    // 3. MENU INTERATIVO (USANDO SWITCH)
    // ===============================================
    
    int escolha_atributo;
    double valor1 = 0.0;
    double valor2 = 0.0;
    const char *atributo_nome = "";
    // 1 = Maior valor vence (Padr√£o). 0 = Menor valor vence (Densidade).
    int vence_maior = 1; 

    printf("\n\n============================================\n");
    printf(" ‚öîÔ∏è  SUPER TRUNFO: ESCOLHA DE ATRIBUTO\n");
    printf("============================================\n");
    printf(" Escolha o atributo para comparar:\n");
    printf(" 1 - Popula√ß√£o\n");
    printf(" 2 - √Årea\n");
    printf(" 3 - PIB\n");
    printf(" 4 - Pontos Tur√≠sticos\n");
    printf(" 5 - Densidade Demogr√°fica\n");
    printf("--------------------------------------------\n");
    printf(" Digite o n√∫mero da sua escolha: ");

    if (scanf("%d", &escolha_atributo) != 1) {
        printf("\nüö´ Entrada inv√°lida! Digite um n√∫mero.\n");
        return 1;
    }

    switch (escolha_atributo) {
        case 1:
            atributo_nome = "Popula√ß√£o";
            valor1 = (double)populacao;
            valor2 = (double)populacao2;
            vence_maior = 1; 
            break;

        case 2:
            atributo_nome = "√Årea (km¬≤)";
            valor1 = (double)area;
            valor2 = (double)area2;
            vence_maior = 1;
            break;

        case 3:
            atributo_nome = "PIB (Bilh√¥es)";
            valor1 = (double)pib;
            valor2 = (double)pib2;
            vence_maior = 1;
            break;

        case 4:
            atributo_nome = "Pontos Tur√≠sticos";
            valor1 = (double)ponto_turistico;
            valor2 = (double)ponto_turistico2;
            vence_maior = 1;
            break;

        case 5:
            atributo_nome = "Densidade Demogr√°fica";
            valor1 = (double)densidade;
            valor2 = (double)densidade2;
            vence_maior = 0; // üõë REGRA INVERTIDA: Menor valor vence
            break;

        default:
            printf("\nüö´ Op√ß√£o inv√°lida! O jogo ser√° encerrado.\n");
            return 1;
    }

    printf("\n--- Comparando pelo atributo: %s ---\n", atributo_nome);
    printf(" %s (Carta 1): %.2lf\n", cidade, valor1);
    printf(" %s (Carta 2): %.2lf\n", cidade2, valor2);
    printf("---------------------------------------\n");
    printf(" RESULTADO: ");

    // ===============================================
    // 4. L√ìGICA DE COMPARA√á√ÉO ANINHADA (IF-ELSE DENTRO DE IF-ELSE)
    // ===============================================
    
    // N√≠vel 1: Checagem de Empate
    if (valor1 == valor2) {
        printf("ü§ù Empate! Os valores s√£o iguais.\n");
    } else {
        // N√≠vel 2: Decis√£o de Vit√≥ria baseada na Regra (vence_maior)
        
        if (vence_maior) {
            // Regra Padr√£o: MAIOR VALOR VENCE
            if (valor1 > valor2) {
                printf("‚úÖ Carta 1 (%s) VENCE! (%.2lf > %.2lf)\n", cidade, valor1, valor2);
            } else {
                printf("‚úÖ Carta 2 (%s) VENCE! (%.2lf > %.2lf)\n", cidade2, valor2, valor1);
            }
        } else {
            // Regra INVERTIDA (Densidade Demogr√°fica): MENOR VALOR VENCE
            if (valor1 < valor2) {
                printf("‚úÖ Carta 1 (%s) VENCE! (%.2lf < %.2lf)\n", cidade, valor1, valor2);
            } else {
                printf("‚úÖ Carta 2 (%s) VENCE! (%.2lf < %.2lf)\n", cidade2, valor2, valor1);
            }
        }
    }

    printf("============================================\n");
    
    return 0;
}
