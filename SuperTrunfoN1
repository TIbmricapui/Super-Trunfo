#include <stdio.h>

int main() {


    //  1. VARIÃVEIS E ATRIBUIÃ‡ÃƒO DIRETA - CARTA 01 (SÃƒO PAULO)

    char estado[20] = "SP";
    char cidade[50] = "SÃ£o Paulo";
    unsigned long int populacao = 12325000;
    float area = 1521.11f; 
    float pib = 699.28f; 
    int ponto_turistico = 50; 
    float densidade, pibpercapita, super_poder;
    
 
    //  2. CÃLCULOS CARTA 01 (CÃ¡lculos seguros com operador ternÃ¡rio)

    densidade = (area > 0) ? (float) populacao / area : 0.0f;
    pibpercapita = (populacao > 0) ? pib / (float)populacao : 0.0f;
    // CÃ¡lculo do Super Poder (ProteÃ§Ã£o contra divisÃ£o por zero)
    super_poder = (float)populacao + area + pib + ponto_turistico + pibpercapita + (densidade > 0 ? (1.0f / densidade) : 0.0f);
    
    //  3. VARIÃVEIS E ATRIBUIÃ‡ÃƒO DIRETA - CARTA 02 (RIO DE JANEIRO

    char estado2[20] = "RJ";
    char cidade2[50] = "Rio de Janeiro";
    unsigned long int populacao2 = 6748000; 
    float area2 = 1200.25f; 
    float pib2 = 300.50f;
    int ponto_turistico2 = 30;
    float densidade2, pibpercapita2, super_poder2;

    // CÃLCULOS CARTA 02
    densidade2 = (area2 > 0) ? (float) populacao2 / area2 : 0.0f;
    pibpercapita2 = (populacao2 > 0) ? pib2 / (float)populacao2 : 0.0f;
    // CÃ¡lculo do Super Poder (ProteÃ§Ã£o contra divisÃ£o por zero)
    super_poder2 = (float)populacao2 + area2 + pib2 + ponto_turistico2 + pibpercapita2 + (densidade2 > 0 ? (1.0f / densidade2) : 0.0f);

    //  4. EXIBIÃ‡ÃƒO COMPLETA DOS ATRIBUTOS

    printf("            RESUMO COMPLETO DAS CARTAS \n");
 
    //  CARTA 1
    printf("\n    CARTA 1: %s (%s)    \n", cidade, estado);
    printf("PopulaÃ§Ã£o: %lu\n", populacao);
    printf("Ãrea: %.2f kmÂ²\n", area);
    printf("PIB (BilhÃ´es): %.2f\n", pib);
    printf("Pontos TurÃ­sticos: %d\n", ponto_turistico);
    printf("Densidade Populacional: %.2f hab/kmÂ²\n", densidade);
    printf("PIB Per Capita: %.8f (bilhÃµes/hab)\n", pibpercapita);
    printf("Super Poder: %.2f\n", super_poder);

    // CARTA 2
    printf("\n    CARTA 2: %s (%s)    \n", cidade2, estado2);
    printf("PopulaÃ§Ã£o: %lu\n", populacao2);
    printf("Ãrea: %.2f kmÂ²\n", area2);
    printf("PIB (BilhÃ´es): %.2f\n", pib2);
    printf("Pontos TurÃ­sticos: %d\n", ponto_turistico2);
    printf("Densidade Populacional: %.2f hab/kmÂ²\n", densidade2);
    printf("PIB Per Capita: %.8f (bilhÃµes/hab)\n", pibpercapita2);
    printf("Super Poder: %.2f\n", super_poder2);

    //  5. COMPARAÃ‡ÃƒO PELO NOVO ATRIBUTO: POPULAÃ‡Ã‚O
   

    printf("     \n COMPARANDO CARTAS DO SUPER TRUNFO \n");
    printf("\n Regra: MAIOR POPULAÃ‡ÃƒO VENCE  \n");
    printf("Carta 1 - %s (%s): %lu\n", cidade, estado, populacao);
    printf("Carta 2 - %s (%s): %lu\n", cidade2, estado2, populacao2); 
    printf("\nResultado: ");

    // LÃ³gica de DecisÃ£o (PopulaÃ§Ã£o: MAIOR VALOR VENCE)
    
    if (populacao == populacao2) {
        // Regra de Empate
        printf("ðŸ¤ Empate! As populaÃ§Ãµes sÃ£o iguais.\n");
    } else {
        // Regra PadrÃ£o: MAIOR VALOR VENCE
        if (populacao > populacao2) {
            printf("âœ… Carta 1 (%s) venceu! (Maior PopulaÃ§Ã£o: %lu)\n", cidade, populacao);
        } else {
            printf("âœ… Carta 2 (%s) venceu! (Maior PopulaÃ§Ã£o: %lu)\n", cidade2, populacao2);
        }
    }

    return 0;
}
